<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchbrandedit"
        tools:ignore="MissingConstraints"
        android:hint="Search Album or Song"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <requestFocus/>
    </EditText>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/noResultFound"
           android:gravity="center_horizontal|center_vertical"
           android:textSize="25sp"
           android:textColor="@android:color/black"
           android:layout_marginTop="50dp"
           app:layout_constraintTop_toBottomOf="@+id/searchbrandedit"
           android:layout_below="@+id/searchbrandedit"
          android:visibility="gone"
           android:text="@string/label_no_result"
           tools:ignore="MissingConstraints">


       </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/searchbrandedit"
            android:id="@+id/brandlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/searchbrandedit"/>

</androidx.constraintlayout.widget.ConstraintLayout>