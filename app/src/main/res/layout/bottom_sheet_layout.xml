<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/imageLayout"
        android:gravity="center"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:gravity="center"
        android:drawablePadding="16dp"
        tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <View
        android:id="@+id/ViewAlbum"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@id/imageLayout" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ViewAlbum" />

    <View
        android:id="@+id/ViewName"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@id/textName" />

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ViewName" />

    <View
        android:id="@+id/ViewArtist"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@id/textArtist" />

    <TextView
        android:id="@+id/textLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:textColorLink="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        android:autoLink="all"
        app:layout_constraintTop_toBottomOf="@id/ViewArtist" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@id/textLink" />

</androidx.constraintlayout.widget.ConstraintLayout>